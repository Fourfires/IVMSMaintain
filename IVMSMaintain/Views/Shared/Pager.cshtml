@model Webdiyer.WebControls.Mvc.PagedList<Models.TServerManager>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>站点编号</th>
        <th>站点名称</th>
        <th>站点IP</th>
        <th>线名</th>
        <th>显示路径</th>
        <th>汇聚名称</th>
        <th>汇聚IP</th>
        <th>操作</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PKID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StationNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Line)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConvergeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConvergeIp)
            </td>
            <td class="btn-group-xs">
                @using (Html.BeginForm("Contact", "Home", FormMethod.Get))
                {
                    <button class='btn btn-success btn-xs' type="submit" style="float: left">同步资源</button>
                }
                @using (Html.BeginForm("Contact", "Home", FormMethod.Get))
                {
                    <button class='btn btn-success btn-xs' type="submit" style="float: left">远程</button>
                }
                @using (Html.BeginForm("Contact", "Home", FormMethod.Get))
                {
                    <button class='btn btn-danger btn-xs' type="submit" style="float: left">删除</button>
                }
            </td>
        </tr>
    }
</table>
