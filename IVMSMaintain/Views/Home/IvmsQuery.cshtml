@using Models
@using System.Linq
@using Webdiyer.WebControls.Mvc
@model PagedList<Models.TServerManager>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "站点查询";
}


    
<div class="page-header">
    
        @using (Html.BeginForm("IvmsQuery", "Home", FormMethod.Get))
        {
            <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">站名/IP地址</span>
            @Html.TextBox("searchkey", "", new { @class = "form-control", placeholder = "输入站名,IP地址,站编号即可查询..." })
                 <span class="input-group-btn">
                     <button class="btn btn-success" type="submit" style="float: left">Go!</button>
                 </span>
            </div>
        }
</div>
<div class="panel panel-default">
    <!-- Default panel contents -->
    @Html.Pager(Model, new PagerOptions
    {
        PageIndexParameterName = "pageIndex",
        ContainerTagName = "ul",
        PrevPageText = "上页",
        NextPageText = "下页",
        CssClass = "pagination",
        CurrentPagerItemTemplate = "<li  class='disabled'><a href='#'>{0}</a></li>",
        NavigationPagerItemTemplate = "<li>{0}</li>",
        MorePagerItemTemplate = "<li>{0}</li>",
        PagerItemTemplate = "<li>{0}</li>",
        NumericPagerItemTemplate = "<li>{0}</li>",
        DisabledPagerItemTemplate = "<li class='disabled'><a href='#'>{0}</a></li>",
    })
    <div class="panel-heading">站点</div>

    @Html.Partial("Pager", Model)
    @{
        Html.RegisterMvcPagerScriptResource();
    }

    @Html.Pager(Model, new PagerOptions
    {
        PageIndexParameterName = "pageIndex",
        ContainerTagName = "ul",
        PrevPageText = "上页",
        NextPageText = "下页",
        CssClass = "pagination",
        CurrentPagerItemTemplate = "<li  class='disabled'><a href='#'>{0}</a></li>",
        NavigationPagerItemTemplate = "<li>{0}</li>",
        MorePagerItemTemplate = "<li>{0}</li>",
        PagerItemTemplate = "<li>{0}</li>",
        NumericPagerItemTemplate = "<li>{0}</li>",
        DisabledPagerItemTemplate = "<li class='disabled'><a href='#'>{0}</a></li>",
    })
    <div class="panel-footer"></div>
</div>







